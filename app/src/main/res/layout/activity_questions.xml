<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_height="wrap_content"
	android:layout_width="match_parent"
	android:fillViewport="true"
>
	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<android.support.constraint.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			tools:context="biz.eventually.atpl.ui.questions.QuestionsActivity">

			<TextView
				android:id="@+id/question_label"
				tools:text="One Question label"
				android:gravity="start"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				android:layout_marginTop="@dimen/margin_large"
				android:layout_marginBottom="@dimen/margin_large"
				android:textAppearance="@style/TextAppearance.AppCompat.Large"
				android:layout_marginLeft="@dimen/margin_large"
				android:layout_marginRight="@dimen/margin_large"
				android:padding="@dimen/padding_large"
				android:textAlignment="textStart"
				app:layout_constraintHorizontal_bias="0.5"
				android:textSize="18sp"
			/>

			<android.support.v7.widget.CardView
				android:id="@+id/question_answer_1"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				app:layout_constraintTop_toBottomOf="@+id/question_label"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				android:layout_marginTop="@dimen/margin_large"
				android:padding="@dimen/padding_large"
				android:layout_marginLeft="@dimen/margin_large"
				android:layout_marginRight="@dimen/margin_large"
				app:contentPadding="@dimen/padding_thinner"
				app:cardCornerRadius="@dimen/padding_thin"
			>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
							  android:layout_gravity="center" />
					<TextView
						android:id="@+id/question_answer_1_text"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="@dimen/padding_thin"
						android:layout_marginBottom="@dimen/padding_thin"
						tools:text="Answer 1"
					/>
				</LinearLayout>
			</android.support.v7.widget.CardView>

			<android.support.v7.widget.CardView
				android:id="@+id/question_answer_2"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				app:layout_constraintTop_toBottomOf="@+id/question_answer_1"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				android:layout_marginTop="@dimen/margin_large"
				android:padding="@dimen/padding_thin"
				android:layout_marginLeft="@dimen/margin_large"
				android:layout_marginRight="@dimen/margin_large"
				app:contentPadding="@dimen/padding_thinner"
				app:cardCornerRadius="@dimen/padding_thin"
			>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
							  android:layout_gravity="center" />
					<TextView
						android:id="@+id/question_answer_2_text"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="@dimen/padding_thin"
						android:layout_marginBottom="@dimen/padding_thin"
						tools:text="Answer 2" />
				</LinearLayout>
			</android.support.v7.widget.CardView>

			<android.support.v7.widget.CardView
				android:id="@+id/question_answer_3"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				app:layout_constraintTop_toBottomOf="@+id/question_answer_2"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				android:layout_marginTop="@dimen/margin_large"
				android:padding="@dimen/padding_large"
				android:layout_marginLeft="@dimen/margin_large"
				android:layout_marginRight="@dimen/margin_large"
				app:contentPadding="@dimen/padding_thinner"
				app:cardCornerRadius="@dimen/padding_thin"
			>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
							  android:layout_gravity="center" />
					<TextView
						android:id="@+id/question_answer_3_text"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="@dimen/padding_thin"
						android:layout_marginBottom="@dimen/padding_thin"
						tools:text="Answer 3" />
				</LinearLayout>
			</android.support.v7.widget.CardView>

			<android.support.v7.widget.CardView
				android:id="@+id/question_answer_4"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				app:layout_constraintTop_toBottomOf="@+id/question_answer_3"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				android:layout_marginTop="@dimen/margin_large"
				android:padding="@dimen/padding_large"
				android:layout_marginLeft="@dimen/margin_large"
				android:layout_marginRight="@dimen/margin_large"
				app:contentPadding="@dimen/padding_thinner"
				app:cardCornerRadius="@dimen/padding_thin"
			>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
							  android:layout_gravity="center" />
					<TextView
						android:id="@+id/question_answer_4_text"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="@dimen/padding_thin"
						android:layout_marginBottom="@dimen/padding_thin"
						tools:text="Answer 4" />
				</LinearLayout>
			</android.support.v7.widget.CardView>

			<Button
				android:text="@string/question_next"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/question_next"
				android:layout_marginTop="16dp"
				android:layout_marginRight="16dp"
				android:layout_marginEnd="16dp"
				app:layout_constraintTop_toBottomOf="@+id/question_answer_4"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				android:layout_marginBottom="16dp"
				app:layout_constraintVertical_bias="1.0"
			/>
			<Button
				android:text="@string/question_back"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/question_previous" android:layout_marginTop="16dp"
				app:layout_constraintTop_toBottomOf="@+id/question_answer_4"
				android:layout_marginLeft="16dp"
				android:layout_marginStart="16dp"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				android:layout_marginBottom="16dp" app:layout_constraintVertical_bias="1.0" />
		</android.support.constraint.ConstraintLayout>

		<com.victor.loading.rotate.RotateLoading
			android:id="@+id/rotateloading"
			android:layout_width="80dp"
			android:layout_height="80dp"
			app:loading_width="5dp"
			app:loading_color="@color/colorAccent"
			android:layout_gravity="center"
			android:foregroundGravity="center"
		/>
	</FrameLayout>
</ScrollView>